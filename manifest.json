{
    "name": "Inject script",
    "version": "1.0",
    "description": "Inject script!",
    "manifest_version": 2,
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/watch*"],
        "js": ["main.js"],
        "run_at": "document_idle",
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }    
  }